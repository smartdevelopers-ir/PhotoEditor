<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >
<ir.smartdevelopers.smartphotoeditor.cropper.CropImageView
    android:id="@+id/spe_cropView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/spe_btnCancel"

    />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/spe_btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spe_btnDone"
        android:text="@string/spe_cancel"
        android:textColor="#FFFFFF"
        style="?attr/borderlessButtonStyle"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/spe_btnDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/spe_btnCancel"
        android:text="@string/spe_done"
        android:textColor="#FFFFFF"
        style="?attr/borderlessButtonStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>